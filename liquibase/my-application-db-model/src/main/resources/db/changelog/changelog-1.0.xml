<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.9.xsd"
        logicalFilePath="changelog-1.0.xml">

    <!-- Schema creation to be added here -->

    <changeSet id="2025-10-26-create-users" author="kostakoff">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>

        <createTable tableName="users" remarks="Пользователи системы">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" primaryKeyName="pk_users" nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="middle_name" type="VARCHAR(100)">
                <constraints nullable="true"/>
            </column>
            <column name="created_at" type="TIMESTAMP">
                <constraints nullable="false"/>
                <defaultValueComputed>CURRENT_TIMESTAMP</defaultValueComputed>
            </column>
            <column name="updated_at" type="TIMESTAMP">
                <constraints nullable="true"/>
            </column>
        </createTable>

        <createIndex tableName="users" indexName="idx_users_last_first">
            <column name="last_name"/>
            <column name="first_name"/>
        </createIndex>

        <rollback>
            <dropTable tableName="users"/>
        </rollback>
    </changeSet>


</databaseChangeLog>
